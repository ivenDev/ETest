<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quantityCorrectAnswersTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Правильных ответов"
            android:textSize="20sp"
            android:textColor="@color/colorCorrectText"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/percentageOfCorrectAnswersText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/quantityIncorrectAnswersTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Неправильных ответов"
            android:textSize="20sp"
            android:textColor="@color/colorIncorrectText"
            android:gravity="center"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/repeat_btn"
                style="@style/resultActivityButton"
                android:text="@string/repeatButtonText"
                android:onClick="onClick"


                />

            <Button
                android:id="@+id/ticket_sel_btn"
                style="@style/resultActivityButton"
                android:text="К выбору билета"
                android:onClick="onClick"
                />
        </LinearLayout>
        <Button
            android:id="@+id/home_btn"
            style="@style/BtnGroupSel"
            android:padding="12dp"
            android:text="@string/homeButtonText"
            android:onClick="onClick"

            />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>