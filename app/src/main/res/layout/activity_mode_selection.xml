<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/question_mode_btn"
        style="@style/BtnModeSel"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/question_mode_btn_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ticket_mode_btn"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/ticket_mode_btn_text"
        style="@style/BtnModeSel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_mode_btn" />

    <Button
        android:id="@+id/exam_mode_btn"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/exam_mode_btn_text"
        style="@style/BtnModeSel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticket_mode_btn" />
</android.support.constraint.ConstraintLayout>